<!DOCTYPE html>
<html>
<head>
  <title>Employee Payroll</title>

  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light">

<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-success">EMPLOYEE PAYROLL</h3>
    <a href="/add" class="btn btn-success">
      <i class="fa fa-plus"></i> Add User
    </a>
  </div>

  <h4 class="mb-3">Employee Details</h4>

  <!-- ðŸ” SEARCH BAR -->
  <form method="GET" action="/" class="mb-4">
    <div class="input-group">
      <input type="text" name="search" class="form-control"
             placeholder="Search by name..."
             value="<%= search || '' %>">
      <button class="btn btn-outline-secondary" type="submit">
        <i class="fa fa-search"></i>
      </button>
      <a href="/" class="btn btn-outline-danger">Clear</a>
    </div>
  </form>

  <% 
    let totalSalary = 0
    let departments = new Set()

    employees.forEach(emp => {
      totalSalary += Number(emp.salary)
      departments.add(emp.department)
    })

    let totalTax = totalSalary * 0.12
    let totalNet = totalSalary - totalTax
    let avgSalary = employees.length ? totalSalary / employees.length : 0
  %>

  <!-- Cards -->
  <div class="row mb-4">
    <div class="col-md-2">
      <div class="card shadow-sm text-center p-3">
        <i class="fa fa-users text-secondary"></i>
        <p>Total Employees</p>
        <h6><%= employees.length %></h6>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card shadow-sm text-center p-3">
        <i class="fa fa-building text-secondary"></i>
        <p>Departments</p>
        <h6><%= departments.size %></h6>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card shadow-sm text-center p-3">
        <i class="fa fa-money-bill text-warning"></i>
        <p>Total Basic</p>
        <h6>â‚¹<%= totalSalary.toFixed(2) %></h6>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card shadow-sm text-center p-3">
        <i class="fa fa-receipt text-dark"></i>
        <p>Total Tax (12%)</p>
        <h6>â‚¹<%= totalTax.toFixed(2) %></h6>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card shadow-sm text-center p-3">
        <i class="fa fa-wallet text-success"></i>
        <p>Total Net</p>
        <h6 class="text-success">â‚¹<%= totalNet.toFixed(2) %></h6>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card shadow-sm text-center p-3">
        <i class="fa fa-chart-line text-dark"></i>
        <p>Average</p>
        <h6>â‚¹<%= avgSalary.toFixed(2) %></h6>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="card shadow-sm">
    <table class="table table-striped mb-0">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Gender</th>
          <th>Department</th>
          <th>Salary</th>
          <th>Start Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => { %>
          <tr>
            <td><%= emp.name %></td>
            <td><%= emp.gender %></td>
            <td><%= emp.department %></td>
            <td>â‚¹<%= emp.salary %></td>
            <td><%= emp.startDate %></td>
            <td>
              <a href="/edit/<%= emp.id %>" class="btn btn-sm btn-outline-success">
                <i class="fa fa-pen"></i>
              </a>

              <form action="/delete/<%= emp.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-outline-danger"
                        onclick="return confirm('Are you sure?')">
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>
</body>
</html>
